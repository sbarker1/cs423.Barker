<Window x:Class="TurtleGraphicsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Turtle Graphics Application" Height="600" Width="800">
    <Grid>
        <Canvas x:Name="DrawingCanvas" Background="White" Width="500" Height="500" Margin="20"/>
        <TextBox x:Name="CommandTextBox" Width="300" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,20"/>
        <Button Content="Execute" Click="ExecuteButton_Click" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,20,20"/>
    </Grid>
</Window>
